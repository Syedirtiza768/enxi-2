# Production Environment Configuration Example
# Copy this to .env.production and update with your values

# Database Configuration
DATABASE_URL="postgresql://user:password@host:5432/database"
# For MySQL: DATABASE_URL="mysql://user:password@host:3306/database"
# For SQL Server: DATABASE_URL="sqlserver://host:1433;database=db;user=sa;password=pass"

# Application Settings
NODE_ENV="production"
JWT_SECRET="your-production-secret-key-here"
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Company Configuration for COA Setup
COMPANY_NAME="Your Company Name"
COMPANY_CODE="YOURCO"
COMPANY_REG_NO="REG-123456"
COMPANY_TAX_NO="TAX-123456"
COMPANY_EMAIL="info@yourcompany.com"
COMPANY_PHONE="+1234567890"
COMPANY_WEBSITE="https://yourcompany.com"
COMPANY_ADDRESS="123 Business Street"
COMPANY_CITY="New York"
COMPANY_STATE="NY"
COMPANY_COUNTRY="US"
COMPANY_POSTAL="10001"

# Default Settings
DEFAULT_CURRENCY="USD"
DEFAULT_TAX_RATE="10"

# Chart of Accounts Settings
FORCE_RESEED="false"  # Set to true to recreate COA (WARNING: deletes existing accounts)

# Email Configuration (if needed)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@yourcompany.com"

# Storage Configuration (if using cloud storage)
STORAGE_TYPE="local"  # or "s3", "azure", "gcs"
S3_BUCKET=""
S3_REGION=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""

# Monitoring (optional)
SENTRY_DSN=""
LOG_LEVEL="error"